{% embed '@atoms/grid/_grid-1-up.twig' %}
  {% block column_1 %}
    {# main #}
    <h1 class="mb-3">
      {{ page_title }}
    </h1>
    <div class="mb-3 p-3 bg-grey-lightest border border-grey rounded">
      <p class="text-lg font-light">
        {{ dropdowns_helper }}
      </p>
    </div>
    <hr />
    {# First Dropdown #}
    <div class="mb-3">
      <h2>
        {{ headers[0].header_text }}
      </h2>
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_text: 'Dropdown button',
        button_id: 'dropdownMenuButton'
      } %}
    </div>
    {# <a> element dropdown #}
    <div class="mb-3">
      <h2>
        {{ headers[1].header_text }}
      </h2>
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_text: 'Dropdown link',
        button_id: 'dropdownMenuLink',
        button_element: 'a',
        unique_attributes: 'role="button" id="dropdownMenuLink"',
        button_link: '#'
      } %}
    </div>
    {# option 1 #}
    <div class="mb-3">
      <h2>
        {{ headers[2].header_text }}
      </h2>
      {% for btn in btn_colors %}
        {% include '@atoms/dropdown/_dropdown-menu.twig' with btn %}
      {% endfor %}
    </div>
    {# option 2 #}
    <div class="mb-3">
      <h2>
        {{ headers[2].header_text }}
      </h2>
      {% for btn in btn_colors %}
        {% include '@atoms/dropdown/_dropdown-menu.twig' with {
          dropdown_color: btn.dropdown_color,
          dropdown_button: btn.dropdown_button,
          button_size: btn.button_size,
          dropdown_text: btn.dropdown_text,
          text_color: btn.text_color
        } %}
      {% endfor %}
    </div>
    {# sizing #}
    <div class="mb-3">
      <h2>
        {{ headers[3].header_text }}
      </h2>
      <div class="flex flex-col md:flex-row lg:flex-row">
        {% include '@atoms/dropdown/_dropdown-menu.twig' with {
          dropdown_color: sizes[0].dropdown_color,
          dropdown_button: sizes[0].dropdown_button,
          button_size: sizes[0].button_size,
          dropdown_text: sizes[0].dropdown_text
        } %}
        {% include '@atoms/dropdown/_dropdown-menu.twig' with {
          dropdown_color: sizes[1].dropdown_color,
          dropdown_button: sizes[1].dropdown_button,
          button_size: sizes[1].button_size,
          dropdown_text: sizes[1].dropdown_text
        } %}
        {% include '@atoms/dropdown/_dropdown-menu.twig' with {
          dropdown_color: sizes[0].dropdown_color,
          dropdown_button: sizes[0].dropdown_button,
          dropdown_split: sizes[0].dropdown_split,
          button_size: sizes[0].button_size,
          dropdown_text: sizes[0].dropdown_text
        } %}
        {% include '@atoms/dropdown/_dropdown-menu.twig' with {
          dropdown_color: sizes[1].dropdown_color,
          dropdown_button: sizes[1].dropdown_button,
          dropdown_split: sizes[1].dropdown_split,
          button_size: sizes[1].button_size,
          dropdown_text: sizes[1].dropdown_text
        } %}
      </div>
    </div>
    {# dropup #}
    <div class="mb-3">
      <h2>
        {{ headers[4].header_text }}
      </h2>
      <p>
        {{ headers[3].header_paragraph }}
      </p>
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_button: 'true',
        dropup: 'true',
        dropdown_text: 'Dropup'
      } %}
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_button: 'true',
        dropup: 'true',
        dropdown_split: 'true',
        dropdown_text: 'Dropup Split'
      } %}
    </div>
    {# Menu Items #}
    <div class="mb-3">
      <h2>
        Menu Items
      </h2>
      <p>
        {{ headers[4].header_paragraph }}
      </p>
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_text: 'Dropdown',
        dropdown_menu_element: 'button',
        button_id: 'dropdownMenu2'
      } %}
    </div>
    {# Menu alignment #}
    <div class="mb-3">
      <h2>
        Menu alignment
      </h2>
      {% include '@atoms/dropdown/_dropdown-menu.twig' with {
        dropdown_color: 'gray-600 text-white',
        dropdown_text: "This dropdown's menu is right-aligned",
        dropdown_menu_right: 'true'
      } %}
    </div>
    {# In-menu options #}
    <div class="mb-3">
      <h2>
        In-menu options
      </h2>
      {% embed '@atoms/grid/_grid-3-up.twig'
        with {
          container: false
        }
      %}
        {% block column_1 %}
          {% embed '@atoms/dropdown/_dropdown-menu.twig'
            with {
              dropdown_color: 'gray-600 text-white',
              dropdown_text: 'Header'
            }
          %}
            {% block dropdown_menu_content %}
              <h6 class="block py-2 px-6 mb-0 text-sm text-greay-dark whitespace-no-wrap">
                Dropdown header
              </h6>
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[0].dropdown_menu_item_text }}
              </a>
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[1].dropdown_menu_item_text }}
              </a>
            {% endblock %}
          {% endembed %}
        {% endblock %}
        {% block column_2 %}
          {% embed '@atoms/dropdown/_dropdown-menu.twig'
            with {
              dropdown_color: 'gray-600 text-white',
              dropdown_text: 'Divider'
            }
          %}
            {% block dropdown_menu_content %}
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[0].dropdown_menu_item_text }}
              </a>
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[1].dropdown_menu_item_text }}
              </a>
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[2].dropdown_menu_item_text }}
              </a>
              <div class="h-0 my-2 overflow-hidden border-t-1 border-grey-light"></div>
              <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
                href="#">
                {{ dropdown_menu_items[3].dropdown_menu_item_text }}
              </a>
            {% endblock %}
          {% endembed %}
        {% endblock %}
        {% block column_3 %}
          {% include '@atoms/dropdown/_dropdown-menu.twig' with {
            dropdown_color: 'gray-600 text-white',
            dropdown_text: 'Disabled Items',
            dropdown_menu_items: dropdown_menu_disabled
          } %}
        {% endblock %}
      {% endembed %}
    </div>
    {# Menu forms #}
    <div class="mb-3">
      <h2>
        Menu forms
      </h2>
      {% embed '@atoms/dropdown/_dropdown-menu.twig'
        with {
          dropdown_color: 'gray-600 text-white',
          dropdown_text: 'Menu form'
        }
      %}
        {% block dropdown_menu_content %}
          <form class="px-4 py-3">
            <div class="mb-4">
              <label for="exampleDropdownFormEmail1">
                Email address
              </label>
              <input type="email"
                class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-grey-darker border border-grey rounded"
                id="examplerelativeFormEmail1"
                placeholder="email@example.com" />
            </div>
            <div class="mb-4">
              <label for="exampleDropdownFormPassword1">
                Password
              </label>
              <input type="password"
                class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-grey-darker border border-grey rounded"
                id="examplerelativeFormPassword1"
                placeholder="Password" />
            </div>
            <div class="relative block mb-2">
              <label class="text-grey-dark pl-6 mb-0">
                <input type="checkbox" class="absolute mt-1 -ml-6" />Remember me
              </label>
            </div>
            <button type="submit"
              class="inline-block align-middle text-center select-none border font-normal whitespace-no-wrap py-2 px-4 rounded text-base leading-normal no-underline text-blue-lightest bg-blue hover:bg-blue-light">
              Sign in
            </button>
          </form>
          <div class="h-0 my-2 overflow-hidden border-t-1 border-grey-light"></div>
          <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
            href="#">
            New around here? Sign up
          </a>
          <a class="block w-full py-1 px-6 font-normal text-grey-darkest whitespace-no-wrap border-0"
            href="#">
            Forgot password?
          </a>
        {% endblock %}
      {% endembed %}
    </div>
  {% endblock %}
{% endembed %}
