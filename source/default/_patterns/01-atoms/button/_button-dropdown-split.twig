{#
/**
 * @file Split Button Dropdown!
 *
 * Available variables:
 * - Inherit variables from @atoms/_button.twig
 *
 */
#}
{% include '@atoms/button/_button.twig' with {
  button_color: dropdown_color,
  button_text: dropdown_text
} %}
<svg class="fill-current h-4 w-4"
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 20 20">
  <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
</svg>

{% embed '@atoms/button/_button.twig'
  with {
    button_other_classes: 'dropdown-toggle dropdown-toggle-split',
    button_other_attributes: 'data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"',
    button_color: dropdown_color
  }
%}
  {% block right %}
    <span class="">Toggle Dropdown</span>
  {% endblock %}
{% endembed %}
