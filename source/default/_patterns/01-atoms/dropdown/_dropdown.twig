{% set dropdown_element = dropdown_element | default ('button') %}
{% set button_classes = [
  (button_color and not button_outline) ? 'bg-' ~ button_color,
  (text_color and not button_outline) ? 'text-' ~ text_color,
  (text_color) ? 'border border-' ~ text_color,
  button_size ? button_size,
  'p-2', 'rounded',
  special_class ? 'p-3' : '',
] | sort | join(' ') | trim %}

<{{dropdown_element}} {{ button_type }} class="{{ button_classes }} {{ dropdown_menu_item.dropdown_menu_item_disabled }} hover:opacity-75" >
	{{ button_text }} {{ chevron_down }}
  {% block right %}{% endblock right %}
</{{dropdown_element}}>
